# Crud
type Slug {
  # Crud
  id:    ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  createdBy: User! @relation(name: "SlugCreator")
  updatedBy: User! @relation(name: "SlugUpdater")
  display:   String!
  trashed:   Boolean! @default(value: "false")

  value: String! @unique
}

# Crud & Routable & Publishable
type Entry {
  # Crud
  id:       ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  createdBy: User! @relation(name: "EntryCreator")
  updatedBy: User! @relation(name: "EntryUpdater")
  display:   String!
  trashed:   Boolean! @default(value: "false")

  # Routable
  slug: Slug

  # Publishable
  published:   Boolean! @default(value: "false")
  publishedAt: DateTime
  publishedBy: User! @relation(name: "EntryPublisher")
  content:     String!

  categories: [Category!]! @relation(name: "EntryCategories")
}

# Crud & Routable
type Category {
  # Crud
  id:      ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  createdBy: User! @relation(name: "CategoryCreator")
  updatedBy: User! @relation(name: "CategoryUpdater")
  display:   String!
  trashed:   Boolean! @default(value: "false")

  # Routable
  slug: Slug

  entries: [Entry!]! @relation(name: "EntryCategories")
}

enum EventType {
  CREATE
  READ
  UPDATE
  TRASH
  DELETE

  ERROR
  WARN
  INFO
}

type Event {
  id:        ID! @unique
  createdAt: DateTime!

  subject: ID!
  type:    EventType!
  value:   String!
}
